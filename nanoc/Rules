#!/usr/bin/env ruby

compile '*' do
  next if item.binary?
  next if item[:extension] == 'css'

  filter :erb
  layout 'default'
end

route '/' do
  '/index.html'
end

route '*' do
  if item[:extension]
    item.identifier.chop + '.' + item[:extension]
  else
    item.identifier.chop
  end
end

layout '*', :erb
